@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="row">
        <div class="col">
            <button type="button" style="float:right;margin-bottom:1em" class="btn btn-info btn-sm" onclick="addRulette()">Nueva Ruleta</button>
          
        </div>

    </div>
    <div class="row" >      
        <div class="col">
            <div class="input-group mb-3 input-group-sm ">
                <input type="text" class="form-control" id="routteId" placeholder="Id de la ruleta">
                <span class="input-group-text" id="basic-addon1" onclick="GetRoulette()">Buscar</span>
            </div>
        </div>
    </div>
    
    <div class="row">
        
        <div class="col">
           
            <canvas id="canvas" width="500" height="500"></canvas>
        </div>
    </div>
    <div class="row justify-content-center">  
        <div class="col-md-5">      
            <input type="number" class="form-control" id="numbet" placeholder="numero">
        </div>
        <div class="col-md-5">
            <input type="number" class="form-control" id="betval" placeholder="cantidad apostada">
        </div>
       
        
    </div>
    <div class="row justify-content-center">
        <div class="col-md-3">
            <input type="button" style="margin-top:1em" class="btn btn-primary btn-sm" value="Apostar!" id='spin' />
        </div>

    </div>
</div>

<div class="modal" tabindex="-1" id="modal-Rulette">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nueva Ruleta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3 input-group-sm">
                    <label for="exampleFormControlInput1" class="form-label">Valor minimo</label>
                    <input type="number" class="form-control" id="minVal" placeholder="Valor minimo">
                </div>
                <div class="mb-3 input-group-sm">
                    <label for="exampleFormControlInput1" class="form-label">Valor maximo</label>
                    <input type="number" class="form-control" id="maxVal" placeholder="Valor maximo">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="addRuletteSubmit()">Guardar</button>
            </div>
        </div>
    </div>
</div>
